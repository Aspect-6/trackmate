{
	"name": "trackmate",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"dev:academic": "cd packages/academic && vite --host",
		"dev:landing": "cd packages/landing && vite --host",
		"build:academic": "cd packages/academic && npx tsc --noEmit && vite build",
		"build:landing": "cd packages/landing && npx tsc --noEmit && vite build",
		"lint:academic": "cd packages/academic && eslint .",
		"lint:landing": "cd packages/landing && eslint .",
		"preview:academic": "cd packages/academic && vite preview",
		"preview:landing": "cd packages/landing && vite preview"
	},
	"type": "module",
	"homepage": "https://trackmate.co",
	"devDependencies": {
		"@eslint/js": "^9.39.1",
		"@types/node": "^24.10.1",
		"@types/react": "^19.2.5",
		"@types/react-dom": "^19.2.3",
		"@vitejs/plugin-react": "^5.1.1",
		"eslint": "^9.39.1",
		"eslint-plugin-react-hooks": "^7.0.1",
		"eslint-plugin-react-refresh": "^0.4.24",
		"globals": "^16.5.0",
		"typescript": "^5.9.3",
		"vite": "^7.2.4"
	},
	"dependencies": {
		"firebase": "^12.8.0"
	}
}
