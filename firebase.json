{
	"hosting": [
		{
			"target": "production",
			"public": "dist",
			"ignore": [
				"firebase.json",
				"**/.*",
				"**/node_modules/**"
			],
			"rewrites": [
				{
					"source": "/academic/**",
					"destination": "/academic/index.html"
				},
				{
					"source": "/auth/**",
					"destination": "/index.html"
				},
				{
					"source": "/landing",
					"destination": "/index.html"
				},
				{
					"source": "/**",
					"destination": "/index.html"
				}
			]
		},
		{
			"target": "dev",
			"public": "dist",
			"ignore": [
				"firebase.json",
				"**/.*",
				"**/node_modules/**"
			],
			"rewrites": [
				{
					"source": "/academic/**",
					"destination": "/academic/index.html"
				},
				{
					"source": "/auth/**",
					"destination": "/index.html"
				},
				{
					"source": "/landing",
					"destination": "/index.html"
				},
				{
					"source": "/**",
					"destination": "/index.html"
				}
			]
		}
	]
}