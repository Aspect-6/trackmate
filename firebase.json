{
	"firestore": {
		"rules": "firestore.rules"
	},
	"hosting": [
		{
			"target": "production",
			"public": "dist",
			"ignore": [
				"firebase.json",
				"**/.*",
				"**/node_modules/**"
			],
			"rewrites": [
				{
					"source": "/academic/**",
					"destination": "/academic/index.html"
				},
				{
					"source": "/auth/**",
					"destination": "/index.html"
				},
				{
					"source": "/landing",
					"destination": "/index.html"
				},
				{
					"source": "/**",
					"destination": "/index.html"
				}
			]
		},
		{
			"target": "dev",
			"public": "dist",
			"ignore": [
				"firebase.json",
				"**/.*",
				"**/node_modules/**"
			],
			"rewrites": [
				{
					"source": "/academic/**",
					"destination": "/academic/index.html"
				},
				{
					"source": "/auth/**",
					"destination": "/index.html"
				},
				{
					"source": "/landing",
					"destination": "/index.html"
				},
				{
					"source": "/**",
					"destination": "/index.html"
				}
			]
		}
	],
	"functions": [
		{
			"source": "functions",
			"codebase": "default",
			"disallowLegacyRuntimeConfig": true,
			"ignore": [
				"node_modules",
				".git",
				"firebase-debug.log",
				"firebase-debug.*.log",
				"*.local"
			],
			"predeploy": [
				"npm --prefix \"$RESOURCE_DIR\" run lint",
				"npm --prefix \"$RESOURCE_DIR\" run build"
			]
		}
	],
	"emulators": {
		"auth": {
			"port": 9099
		},
		"functions": {
			"port": 5001
		},
		"firestore": {
			"port": 8080
		},
		"ui": {
			"enabled": true,
			"port": 4000
		},
		"singleProjectMode": true
	}
}